root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[*.kql]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.ps1]
indent_style = space
indent_size = 2

[*.tf]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2